    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@123ishatest/ludiek-eslint-config": "*",
    "@123ishatest/ludiek-typescript-config": "*",
    "@vitest/coverage-v8": "^4.0.6",
    "jsdom": "^27.1.0",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "es-toolkit": "^1.39.10",
    "strongly-typed-events": "^3.0.11"
  }
}
