{
  "name": "@123ishatest/ludiek",
  "private": false,
  "version": "0.1.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "imports": {
    "@ludiek/*": "./src/*"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build; npm run build:clean",
    "build:clean": "rm -f ./tsconfig.tsbuildinfo",
    "dev": "vite build --watch",
    "lint": "prettier --check . && eslint .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@123ishatest/ludiek-eslint-config": "*",
    "@123ishatest/ludiek-typescript-config": "*",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "strongly-typed-events": "^3.0.11"
  }
}
