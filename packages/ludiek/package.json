{
  "name": "@123ishatest/ludiek",
  "private": false,
  "version": "0.1.0",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "imports": {
    "@ludiek/*": "./src/*"
  },
  "scripts": {
    "build": "npm run check && vite build",
    "check": "tsc -p ./tsconfig.build.json --noEmit",
